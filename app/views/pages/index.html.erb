<div class="pt-4 pb-4">
  <% @questions.each do |question| %>
    <% user_name = question.user.full_name %>
    <div class="card mb-4">
      <div class="card-body">
        <div class="media align-items-center mb-1">
          <div class="user-avatar align-self-center" title="<%= user_name %>"><%= user_name[0] %></div>
          <div class="media-body">
            <h5 class="card-title mb-0"><%= link_to question.title, question %></h5>
          </div>
        </div>
        <div class="question-content">
          <%= question.body %>
        </div>
      </div>
      <div class="card-footer text-muted">
        Posted on <%= question.created_at.strftime('%B %d, %Y') %> by
        <span class="text-primary"><%= user_name %></span>
        <span class="float-right">
          <% if question.solved %> <span class="text-danger">SOLVED</span> <% end %>
        </span>
      </div>
    </div>
  <% end %>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
