<% title "Questions" %>
<div class="pt-4 pb-4">
  <div class="d-flex align-items-center">
    <h1>Questions</h1>
    <%= link_to 'New Question', new_question_path, class: 'btn btn-primary ml-auto' %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>User</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.title %></td>
          <td><%= question.body %></td>
          <td><%= question.user.full_name %></td>
          <td><%= question.category.title %></td>
          <td><%= link_to 'Show', question %></td>
          <td><%= link_to 'Edit', edit_question_path(question) %></td>
          <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
